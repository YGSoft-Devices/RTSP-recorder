# RTSP Recorder Configuration
# Generated by web-manager

# RTSP Settings
RTSP_PORT="8554"
RTSP_PATH="stream"
RTSP_PROTOCOLS="udp,tcp"

# RTSP Authentication (optional)
# If both RTSP_USER and RTSP_PASSWORD are set, authentication is required
# Leave empty for unauthenticated access
RTSP_USER=""
RTSP_PASSWORD=""

# Video Settings
VIDEO_WIDTH="1280"
VIDEO_HEIGHT="960"
VIDEO_FPS="20"
VIDEO_DEVICE="/dev/video0"
VIDEO_FORMAT="auto"
STREAM_SOURCE_MODE="camera"
STREAM_SOURCE_URL=""
RTSP_PROXY_TRANSPORT="auto"
RTSP_PROXY_AUDIO="auto"
RTSP_PROXY_LATENCY_MS="100"
SCREEN_DISPLAY=":0.0"
VIDEO_OVERLAY_ENABLE="no"
VIDEO_OVERLAY_TEXT=""
VIDEO_OVERLAY_POSITION="top-left"
VIDEO_OVERLAY_SHOW_DATETIME="no"
VIDEO_OVERLAY_DATETIME_FORMAT="%Y-%m-%d %H:%M:%S"
VIDEO_OVERLAY_CLOCK_POSITION="bottom-right"
VIDEO_OVERLAY_FONT_SIZE="24"
CSI_OVERLAY_MODE="software"
# H264 encoder settings (CSI/RTSP)
H264_BITRATE_KBPS="4000"
H264_KEYINT="30"
H264_PROFILE=""
H264_QP=""
# Camera Type: auto, usb, csi
CAMERA_TYPE="auto"

# Relay (GPIO) Settings
RELAY_ENABLE="no"
RELAY_GPIO_PIN="0"
RELAY_GPIO_CHIP="gpiochip0"
RELAY_ACTIVE_HIGH="true"
RELAY_OUTPUT_NAME="RelayOutput"
RELAY_OUTPUT_TOKEN="RelayOutput1"

# Recording Settings
RECORD_DIR="/var/cache/rpi-cam/recordings"
SEGMENT_SECONDS="300"
MAX_DISK_MB="0"

# Audio Settings
AUDIO_ENABLE="auto"
AUDIO_RATE="48000"
AUDIO_CHANNELS="1"
AUDIO_BITRATE_KBPS="64"
AUDIO_DEVICE="auto"
AUDIO_GAIN="1.0"

# Advanced Settings
GST_DEBUG_LEVEL="2"
LOG_DIR="/var/log/rpi-cam"
LOW_LATENCY="1"
