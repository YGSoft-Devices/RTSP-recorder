# RTSP Recorder Configuration
# Generated by web-manager

# RTSP Settings
RTSP_PORT="8554"
RTSP_PATH="stream"

# RTSP Authentication (optional)
# If both RTSP_USER and RTSP_PASSWORD are set, authentication is required
# Leave empty for unauthenticated access
RTSP_USER=""
RTSP_PASSWORD=""

# Video Settings
VIDEO_WIDTH="1280"
VIDEO_HEIGHT="960"
VIDEO_FPS="20"
VIDEO_DEVICE="/dev/video0"
# H264 encoder settings (CSI/RTSP)
H264_BITRATE_KBPS="4000"
H264_KEYINT="30"
H264_PROFILE=""
H264_QP=""
# Camera Type: auto, usb, csi
CAMERA_TYPE="auto"

# Recording Settings
RECORD_DIR="/var/cache/rpi-cam/recordings"
SEGMENT_SECONDS="300"
MAX_DISK_MB="0"

# Audio Settings
AUDIO_ENABLE="auto"
AUDIO_RATE="48000"
AUDIO_CHANNELS="1"
AUDIO_BITRATE_KBPS="64"
AUDIO_DEVICE="auto"
AUDIO_GAIN="1.0"

# Advanced Settings
GST_DEBUG_LEVEL="2"
LOG_DIR="/var/log/rpi-cam"
LOW_LATENCY="1"
